@model IEnumerable<OrderManagement.Web.Models.Item>

<h2>Items Purchased by Agent</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Select Agent:</label>
        @Html.DropDownList("agentId", ViewBag.Agents as SelectList, "-- Select Agent --", new { @class = "form-control", style = "max-width:300px;" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Show Items</button>
    </div>
}

@if (ViewBag.AgentName != null)
{
    <h3>Items purchased by @ViewBag.AgentName</h3>

    if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <tr>
                <th>Item Name</th>
                <th>Size</th>
                <th>Unit Price</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Size</td>
                    <td>@String.Format("{0:C}", item.UnitPrice)</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No items purchased by this agent.</p>
    }
}