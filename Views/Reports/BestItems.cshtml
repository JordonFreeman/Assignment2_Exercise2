@model IEnumerable<OrderManagement.Web.Controllers.BestSellingItemViewModel>
@{
    ViewBag.Title = "Best Selling Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Best Selling Items</h2>

            <!-- Navigation tabs -->
            <ul class="nav nav-tabs" id="navTabs">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Index", "Orders")">Orders</a></li>
                <li><a href="@Url.Action("Index", "Items")">Items</a></li>
                <li><a href="@Url.Action("Index", "Agents")">Agents</a></li>
                <li class="active"><a href="@Url.Action("Index", "Reports")">Reports</a></li>
            </ul>

            <div class="panel panel-primary" style="margin-top:20px;">
                <div class="panel-heading">
                    <h3 class="panel-title">Top Selling Items</h3>
                </div>
                <div class="panel-body">
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-default">Back to Reports</a>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-warning" style="margin-top:15px;">
                            <p>@ViewBag.ErrorMessage</p>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <table class="table table-striped" style="margin-top:15px;">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Size</th>
                                    <th>Unit Price</th>
                                    <th>Stock Quantity</th>
                                    <th>Total Quantity Sold</th>
                                    <th>Total Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ItemName</td>
                                        <td>@item.Size</td>
                                        <td>@String.Format("{0:C}", item.UnitPrice)</td>
                                        <td>@item.StockQuantity</td>
                                        <td>@item.TotalQuantitySold</td>
                                        <td>@String.Format("{0:C}", item.TotalRevenue)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info" style="margin-top:15px;">
                            <p>No sales data found in the system.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>