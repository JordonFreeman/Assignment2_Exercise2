@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Order Management System</h2>
            <p class="lead">Welcome to your dashboard</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <!-- Navigation tabs -->
            <ul class="nav nav-tabs" id="navTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "Home")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Orders")">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Items")">Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Agents")">Agents</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Reports")">Reports</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Dashboard content -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Recent Orders</h3>
                </div>
                <div class="panel-body">
                    <!-- You can load actual data here -->
                    <p>Recent order summary will appear here</p>
                    <a href="@Url.Action("Index", "Orders")" class="btn btn-primary btn-sm">View All Orders</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Top Selling Items</h3>
                </div>
                <div class="panel-body">
                    <!-- You can load actual data here -->
                    <p>Top selling items will appear here</p>
                    <a href="@Url.Action("Index", "Items")" class="btn btn-primary btn-sm">View All Items</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Agent Performance</h3>
                </div>
                <div class="panel-body">
                    <!-- You can load actual data here -->
                    <p>Agent performance summary will appear here</p>
                    <a href="@Url.Action("Index", "Agents")" class="btn btn-primary btn-sm">View All Agents</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Sales Reports</h3>
                </div>
                <div class="panel-body">
                    <!-- You can load actual data here -->
                    <p>Sales summary will appear here</p>
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-primary btn-sm">View All Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>